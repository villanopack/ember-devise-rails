<div class="span4 offset4">
  <h3>Login</h3>
  <form class="form-horizontal user-form">
   <fieldset>
    <div class="control-group"
      {{bindAttr class="errors.email:error"}}>
      {{view Ember.TextField valueBinding='view.email' name='email' placeholder='Email'}}
      <span class="help-inline">
        {{errors.email}}
      </span>

      <span class="help-inline">
        {{errors.params}}
      </span>
    </div>
    <div class="control-group"
      {{bindAttr class="errors.password:error"}}>
      {{view Ember.TextField type="password" valueBinding='view.password' placeholder='Password'}}
      <span class="help-inline">
        {{errors.password}}
      </span>
    </div>
    <a href='#' {{action cancel}} class='btn'>Cancel</a>
    <button type="submit" class='btn btn-primary'>Login</button>
   </fieldset>
  </form>

</div>
